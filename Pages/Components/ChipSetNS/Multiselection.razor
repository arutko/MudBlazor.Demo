<MudChipSet @bind-SelectedValues="_selected1" SelectionMode="SelectionMode.MultiSelection" CheckMark="_checkMark1" Variant="Variant.Text" Color="Color.Info">
    <MudChip Value="@("Milk")" />
    <MudChip Value="@("Eggs")" />
    <MudChip Value="@("Soap")" />
    <MudChip Value="@("Corn flakes")" />
    <MudChip Value="@("Salad")" />
    <MudChip Value="@("Apples")" />
    <MudChip Value="@("Red wine")" />
</MudChipSet>

<div class="d-flex flex-column align-center">
    @if (_selected1 is { Count: > 0 })
    {
        <MudText>You selected @string.Join(", ", _selected1.OrderBy(x => x))</MudText>
    }
    else
    {
        <MudText>Nothing selected.</MudText>
    }
    <MudCheckBox @bind-Value="_checkMark1">Check marks</MudCheckBox>
</div>

@code
{
    private bool _checkMark1 = true;
    private IReadOnlyCollection<string> _selected1;
}